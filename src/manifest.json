{
  "manifest_version": 2,
  "name": "네이버 뉴스 사용자 댓글 간편 보기",
  "version": "0.1.0",
  "description": "네이버 뉴스에서 댓글 단 사용자의 다른 댓글을 간편하게 볼 수 있습니다.",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://comment.news.naver.com/*"],
      "css": [
        "css/content.css"
      ],
      "js": [
        "vendor/require.js",
        "js/require_content.js",
        "js/require_config.js",
        "js/cscript/cscript_main.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "vendor/require.js",
      "js/require_config.js",
      "js/bg/bg_main.js"
    ]
  },
  "permissions": [
    "http://m.news.naver.com/*", "tabs"
  ],
  "web_accessible_resources": [
    "vendor/*", "js/*", "font/*"
  ]
}
